    void Yahtzee::display(){
        
        cout << "-----   -----   -----   -----   -----" << endl;
        
        if (diceValue[i] == 1)
        {
            cout << "|   |   ";
        }
        if (diceValue[i] == 2 || diceValue[i] == 3)
        {
            cout << "|  o|   ";
        }
        if (diceValue[i] == 4 || diceValue[i] == 5 || diceValue[i] == 6)
        {
            cout << "|o o|   ";
        }
