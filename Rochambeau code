#include <iostream>
#include <ctype.h>
#include <stdio.h>
#include <string>   //string
#include <time.h>   //time
#include <stdlib.h> //srand, rand

using namespace std;

bool pRock=0;
bool pPaper=0;
bool pScissors=0;
bool pFire=0;

bool cpuRock=0;
bool cpuPaper=0;
bool cpuScissors=0;


void displayRock(){
      //rock ascii art
cout<<"  ~~~~~ "<<endl;
cout<<" /     \\"<<endl;
cout<<" [      ]"<<endl;
cout<<" \\     /"<<endl;
cout<<"  ~~~~~"<<endl;
}
void displayPaper(){
    //paper ascii art
cout<<"    __________"<<endl;
cout<<"   |          |"<<endl;
cout<<"   |          |"<<endl;
cout<<"   |          |"<<endl;
cout<<"   |          |"<<endl;
cout<<"   |          |"<<endl;
cout<<"   |          |"<<endl;
cout<<"   |__________|"<<endl;
}
void displayScissors(){
    //scissor ascii art
cout<<"   _       ,/'"<< endl;
cout<<"  (_).  ,/'"<<endl;
cout<<"   _  ::  "<<endl;
cout<<"  (_)'  `\\."<<endl;
cout<<"           `\\."<<endl;
}

void displayFire(){
cout<<"          _ ._  _ , _ ._"<<endl;
cout<<"        (_ ' ( `  )_  .__)"<<endl;
cout<<"      ( (  (    )   `)  ) _)"<<endl;
cout<<"     (__ (_   (_ . _) _) ,__)"<<endl;
cout<<"         `~~`\\ ' . /`~~`"<<endl;
cout<<"              ;   ;"<<endl;
cout<<"              /   \\"<<endl;
cout<<"_____________/_ __ \\_____________"<<endl;


}
void playGame(){
       //random seed
int cpuSelection=0;
cpuSelection= rand() %3+1; //random number 1-3
cout<<endl<<"CPU Selected is equal to:"<<cpuSelection<<endl<<endl;
string playerSelection;
int playerWins=0;
int cpuWins=0;
    cout<<"Enter in your selection,  rock,  paper, or scissors, : ";
    cin>>playerSelection;
    cout<<endl;

    if(playerSelection=="rock"){
    displayRock();
    pRock=1;
    }
    else if(playerSelection =="paper"){
    displayPaper();
    pPaper=1;
    }
    else if(playerSelection =="scissors"){
    displayScissors();
    pScissors=1;
    }
    else if(playerSelection == "fire"){
    displayFire();
    pFire=1;
    }
    else{
    cout<<"Enter a valid selection"<<endl;
    }
    
    if(cpuSelection==1){
        displayRock();
        cpuRock=1;
    }
    else if(cpuSelection==2){
        displayPaper();
        cpuPaper=1;
    }
    else if(cpuSelection==3){
        displayScissors();
        cpuScissors=1;
    }
    else{
         cout<<"Enter a valid selection"<<endl;
    } 
    
    if (pFire==1){
        cout<<"YOU WIN!";
    }
    else if((pRock==1 && cpuScissors==1)||(pPaper==1&&cpuRock==1)||(pScissors==1 && cpuPaper==1)){
        cout<<"Player Wins"<<endl;
        playerWins++;
    }
    else if((cpuRock==1 && pScissors==1)||(cpuPaper==1 && pRock==1)||(cpuScissors==1 && pPaper==1)){
        cout<<"CPU Beat YOU"<<endl;
        cpuWins++;
    }
    else{
        cout<<"Player and CPU tied..."<<endl<<endl;
    }
    
}

int main()
{
    srand(time(NULL));
   int endgame=0;
       while(endgame!=1){
        playGame();
    }
    return 0;
}
